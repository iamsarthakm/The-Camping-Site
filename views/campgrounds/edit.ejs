<%- include ("../partials/header"); -%>

<div class="container">
<div class="row">
    <h1 style="text-align: center;">Edit <%= campground.name %></h1>

    <div style="width: 30%;margin:25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                    
                <div class="form-group">
                <input type="text" class="form-control" placeholder="name" value="<%= campground.name %>" name="campground[name]">
                </div>

                <div class="form-group">
                    <input type="number" class="form-control" placeholder="price" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
                    </div> 

                <div class="form-group">
                <input type="text" class="form-control" placeholder="url" value="<%= campground.image %>" name="campground[image]">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="url" value="<%= campground.description %>" name="campground[description]">
                    </div>

                <div class="form-group">
                <button class="btn btn-large btn-primary btn-block">Update</button>
                </div>
                <a href="/campgrounds">Go back</a>
            </form>
    </div>

    
</div>
</div>
<%- include ("../partials/footer"); -%>