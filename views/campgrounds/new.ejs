<%- include ("../partials/header"); -%>

<div class="container">
<div class="row">
    <h1 style="text-align: center;">Create a new Campground</h1>

    <div style="width: 30%;margin:25px auto;">
            <form action="/campgrounds" method="POST">
                    
                <div class="form-group">
                <input type="text" class="form-control" placeholder="name" name="name">
                </div> 
                <div class="form-group">
                    <input type="number" class="form-control" placeholder="price" name="price" min="0.01" step="0.01">
                    </div> 
                <div class="form-group">
                <input type="text" class="form-control" placeholder="url" name="image">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="url" name="description">
                    </div>
                <div class="form-group">
                <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
                <a href="/campgrounds">Go back</a>
            </form>
    </div>

    
</div>
</div>
<%- include ("../partials/footer"); -%>